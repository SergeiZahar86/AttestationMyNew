<Window x:Class="Attestation.MainWindow" Name="GlobalWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Attestation"
        xmlns:fa5="http://schemas.fontawesome.com/icons/"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        mc:Ignorable="d"  Title="" Height="1080" Width="1980"  WindowState="Maximized"  WindowStyle="None"  WindowStartupLocation="CenterScreen"
         Loaded="GlobalWindow_Loaded">

    <Window.Resources>
        <!-- .......................... Стили......................................................-->
        <!-- ...................... Textblock в шапке ...................................-->
        <Style x:Key="TextblockHead" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontFamily" Value="Calibry"/>
            <Setter Property="Foreground" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="FontSize" Value="18"/>
                </Trigger>
            </Style.Triggers>
        </Style>


        <!-- ......................Красная кнопка ...................................-->
        <Style  x:Key="RedButton" TargetType="Button">
            <Setter Property="Background" Value="#B22222" />
            <Setter Property="FontFamily" Value="Calibri" />
            <Setter Property="FontSize" Value="20" />
            <Setter Property="Height" Value="30" />
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="4,0,4,0" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}" BorderBrush="Black"
                                BorderThickness="0" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#CB0000"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <DockPanel x:Name="RootWindow">
        <DockPanel x:Name="TitleBar" DockPanel.Dock="Top" Background="#FF37474F" Height="40px">

            <!--  .............................. Кнопки панели управления .........................................-->

            <Button x:Name="CloseButton" fa5:Awesome.Content="Solid_Times"  Click="CloseButton_Click"   DockPanel.Dock="Right"
                    Style="{StaticResource RedButton}"  Width="40"  IsCancel="True">
                <Button.ToolTip>
                    <ToolTip Content="Закончить работу" FontSize="16" Foreground="Black" Background="White"/>
                </Button.ToolTip>
            </Button>


            <Button x:Name="MinButton"   fa5:Awesome.Content="Solid_Minus"  Click="MinButton_Click"  DockPanel.Dock="Right"
                    Style="{StaticResource RedButton}"   Width="40">
                <Button.ToolTip>
                    <ToolTip Content="Свернуть окно" FontSize="16" Foreground="Black" Background="White"/>
                </Button.ToolTip>
            </Button>
            <!--
            <Menu DockPanel.Dock="Right" Width="80" BorderBrush="#37474F"  Background="Transparent" Margin="0,0,30,0" >
                <MenuItem Background="Transparent" Width="80" Height="50" >
                    <MenuItem.Icon >
                        <Image Source="Resources\Key.png" Height="32" Width="25" VerticalAlignment="Top"
                               Margin="0,-10,-9,-9"></Image>
                    </MenuItem.Icon>
                    <MenuItem.Header>
                        <TextBlock Text="Вход" FontSize="16"  Foreground="White" HorizontalAlignment="Right"
                                   Margin="4,0,0,15" FontFamily="Calibri"/>
                    </MenuItem.Header>
                    <MenuItem Header="Войти" Height="35" FontSize="18" Foreground="Black" Click="signIn_Click"></MenuItem>
                    <MenuItem Header="Поменять пароль" Height="35" FontSize="18" Foreground="Black"
                              Click="changePassword_Click"></MenuItem>
                </MenuItem>
            </Menu>
             -->
            
            <Button x:Name="passwordButton"   Click="changePassword_Click"  DockPanel.Dock="Right" Style="{StaticResource RedButton}"
                    fa5:Awesome.Content="Solid_Key"  Width="50"  Margin="4,0,80,0">
                <Button.ToolTip>
                    <ToolTip Content="Смена пароля" FontSize="16" Foreground="Black" Background="White"/>
                </Button.ToolTip>
            </Button>
            <Button x:Name="exitLoginButton" DockPanel.Dock="Right" Style="{StaticResource RedButton}"
                    fa5:Awesome.Content="Solid_SignOutAlt"  Width="50"  Margin="4,0,5,0" Click="signIn_Click">
                <Button.ToolTip>
                    <ToolTip Content="Выйти из учётной записи" FontSize="16" Foreground="Black" Background="White"/>
                </Button.ToolTip>
            </Button>
            <!--
            <Button x:Name="LoginButton" DockPanel.Dock="Right" Style="{StaticResource RedButton}"
                        fa5:Awesome.Content="Solid_User" Click="signIn_Click" Width="50"  Margin="4,0,5,0">
                <Button.ToolTip>
                    <ToolTip Content="Войти в учётную запись" FontSize="16" Foreground="Black" Background="White"/>
                </Button.ToolTip>
            </Button>
            -->

            <!-- .................................    Логотип ............................ -->
            <Image Width="30" Margin="8,4,0,4">
                <Image.Source>
                    <BitmapImage   UriSource="/Resources/logo.png"/>
                </Image.Source>
            </Image>
            <TextBlock HorizontalAlignment="Right" Foreground="#DC0000" FontFamily="Impact"
                       FontSize="24" Margin="4,4,15,4" Text="Indas Cube"/>

            <!--  .............................  Меню ....................................................................-->
            <Border BorderThickness="0 0 0 6" BorderBrush="#CC0000" x:Name="BorderAttestation" Cursor="Hand" >
                <TextBlock HorizontalAlignment="Center"  Foreground="White"  PreviewMouseDown="Attestation_Click"
                           FontFamily="Calibry" FontSize="16" Margin="30,10,15,4">Аттестация</TextBlock>
            </Border>
            <!--
            <Border BorderThickness="0 0 0 6" BorderBrush="#37474F" x:Name="BorderReport" Cursor="Hand">
                <TextBlock HorizontalAlignment="Center" Foreground="White" PreviewMouseDown="Report_Click"
                           FontFamily="Calibry"
                           FontSize="16" Margin="15,10,15,4">Отчеты</TextBlock>
            </Border>
            -->
            <Border BorderThickness="0 0 0 6" BorderBrush="#37474F" x:Name="BorderArchive" Cursor="Hand">
                <TextBlock HorizontalAlignment="Center" Foreground="White" PreviewMouseDown="Archive_Click"
                           FontFamily="Calibry"
                           FontSize="16" Margin="15,10,15,4">Архив</TextBlock>
            </Border>
            <Label x:Name="label_fio" Content="{Binding SomeValueString}"  Height="30" Width="400"
                   VerticalAlignment="Center" FontSize="18" HorizontalContentAlignment="Center"
                   VerticalContentAlignment="Center" 
                   FontFamily="Calibry" Foreground="Black" Background="#FFD0DEE4" Margin="50,0,0,0"/>
            <DockPanel HorizontalAlignment="right" Margin="0,0,20,0">
                <TextBlock HorizontalAlignment="Right" Margin="4,10,15,4" Cursor="Hand"
                           Style="{StaticResource TextblockHead}">Аттестация вагонов</TextBlock>
                <TextBlock  x:Name="user" HorizontalAlignment="Right" Margin="4,10,15,4"
                            Cursor="Hand" Style="{StaticResource TextblockHead}">admin</TextBlock>
                
            </DockPanel>
            

        </DockPanel>
        <Border Background="#EEEEEE">
            <Frame x:Name="MainFrame"  Height="1020" Margin="0,10,0,0" VerticalAlignment="Top" Width="1920" NavigationUIVisibility="Hidden"/>
        </Border>
    </DockPanel>
</Window>
