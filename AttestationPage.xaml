<Page x:Class="Attestation.AttestationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:fa="http://schemas.fontawesome.io/icons/"
      xmlns:local="clr-namespace:Attestation"
      xmlns:fa5="http://schemas.fontawesome.com/icons/"
      mc:Ignorable="d" d:DesignHeight="1200" d:DesignWidth="1980"
      Title="AttestationPage">

    <Page.Resources>
        <!-- .......................... Стили......................................................-->
        <!-- ......................Стиль кнопка начала аттестации ...................................-->
        <Style x:Key="startAttestation" TargetType="Button">
            <Style.Setters>
                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                <Setter Property="Background" Value="#FF6BDA6F"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="FontSize" Value="18"/>
                <Setter Property="FontFamily" Value="Calibri"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <Border Name="border" BorderThickness="0" BorderBrush="Black"
                                        Background="{TemplateBinding Background}" CornerRadius="4">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style.Setters>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#04AD01"/>
                    <Setter Property="FontSize" Value="23"/>
                    <Setter Property="BorderThickness" Value="0"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="True">
                    <Setter Property="BorderThickness" Value="0"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Foreground" Value="#04AD01"/>
                    <Setter Property="Background" Value="Transparent"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <!-- ...................... Стиль CheckBox ...................................-->
        <Style  x:Key="CheckBoxStyle" TargetType="CheckBox">
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Foreground" Value="#AA009933"/>
            <Setter Property="Background" Value="#AA009933"/>
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="30"/>
        </Style>

        <!-- ......................Стиль зеленой кнопки ...................................-->
        <Style  x:Key="GreenButton" TargetType="Button">
            <Setter Property="Background" Value="#AA009933" />
            <Setter Property="FontFamily" Value="Calibri" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Height" Value="30" />
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="4,0,4,0" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}"  BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#5522B222"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <!-- ......................Стиль кнопки Foto ...................................-->
        <Style  x:Key="Foto" TargetType="Button">
            <Style.Setters>
                <Setter Property="Button.Foreground" Value="#FF6BDA6F" />
                <Setter Property="Button.FontFamily" Value="Verdana" />
                <Setter Property="FontSize" Value="23"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <Border Name="border" BorderThickness="0" BorderBrush="Black"
                                    Background="{TemplateBinding Background}" CornerRadius="4">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="transparent"/>
                                    <Setter Property="Opacity" Value="0.91" />

                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style.Setters>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="#04AD01"/>
                    <Setter Property="FontSize" Value="27"/>
                    <Setter Property="BorderThickness" Value="0"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="True">
                    <Setter Property="BorderThickness" Value="0"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- ......................Стиль кнопок аттестации и номера вагона ...................................-->
        <Style  x:Key="SomeButton" TargetType="Button">
            <Style.Setters>
                <Setter Property="Button.FontFamily" Value="Verdana" />
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <Border Name="border" BorderThickness="0" BorderBrush="Black"
                                    Background="{TemplateBinding Background}" CornerRadius="4">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="transparent"/>
                                    <Setter Property="Opacity" Value="0.91" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style.Setters>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderThickness" Value="0"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <!-- ========================== Стили заголовков таблицы ======================= -->
        <Style x:Key="CenterGridHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="Background" Value="#FF37474F"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="Calibri"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="1"/>
            <Setter Property="Margin" Value="1"/>
        </Style>
    </Page.Resources>

    <Grid >
        <!--  Разметка грида  -->
        <Grid.RowDefinitions>
            <RowDefinition Height="0.07*"/>
            <RowDefinition Height="0.07*" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Button x:Name="StartAttestation" Grid.Column="0" Grid.Row="0" Height="50" Width="110" 
                 Style="{StaticResource startAttestation}" HorizontalAlignment="Left" Margin="15,0,0,0">
            <Grid>
                <TextBlock Grid.Row="0" Text="Начать" Padding="2,2,2,0" HorizontalAlignment="Center"/>
                <TextBlock Grid.Row="1" Text="аттестацию"  
                           Padding="2,0,2,5" HorizontalAlignment="Center"/>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
            </Grid>
        </Button>

        <!-- ========================== DataGrid ======================= -->
        <DataGrid x:Name="DataGridMain" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="8" Padding="2" ColumnWidth="*" 
                  AutoGenerateColumns="False" ItemsSource="{Binding}"
                  VerticalAlignment="Top" HorizontalAlignment="Right" FontSize="14" 
                  FontFamily="Calibri" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                  Width="1700"  Loaded="DataGridMain_Loaded" BorderThickness="0"
                  SelectionMode="Single" CanUserAddRows="False" AlternatingRowBackground="#FFD0DEE4"
                   BorderBrush="White" Background="White" 
                  GridLinesVisibility="Horizontal" HorizontalGridLinesBrush="#FFB0B0B0" Margin="0,0,10,0"  >
           

            <DataGrid.Resources>
                <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" 
                   Color="#AAFF0000"/>
            </DataGrid.Resources>
            <!-- ========================== Стиль строки ======================= -->
            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Setter Property="Background" Value="White" />
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Foreground" Value="Red"/>
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Foreground" Value="Red"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.RowStyle>
            <!--  ============================ Описание полей ===================================-->
            <DataGrid.Columns>
                
                <DataGridTemplateColumn x:Name="id" Header="пп №" Width="60"
                                        HeaderStyle="{StaticResource CenterGridHeaderStyle}">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                                <TextBlock Text="{Binding Car_id}"  HorizontalAlignment="Center"
                                       VerticalAlignment="Center" ToolTipService.ShowDuration="15000" 
                                       >
                                    <TextBlock.ToolTip >
                                        <ToolTip>
                                        <TextBlock Text="{Binding Car_id}" FontSize="30" Foreground="Black" 
                                                    Background="White" />
                                        </ToolTip>
                                    </TextBlock.ToolTip>
                                </TextBlock>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                

                
                
                <DataGridTemplateColumn x:Name="VagNum" Header="Номер вагона"  
                                    HeaderStyle="{StaticResource CenterGridHeaderStyle}" >
                    <DataGridTemplateColumn.CellTemplate >
                        <DataTemplate>
                            <Button Click="Change_VagNum" VerticalContentAlignment="Stretch"
                                    HorizontalContentAlignment="Stretch"
                                    BorderThickness="0" Background="Transparent"
                                    Style="{StaticResource SomeButton}">
                                <TextBlock Text="{Binding Num}"  HorizontalAlignment="Center"
                                           VerticalAlignment="Center" ToolTipService.ShowDuration="15000"  >
                                    <TextBlock.ToolTip >
                                        <ToolTip>
                                            <TextBlock Text="{Binding Num}" FontSize="30" Foreground="Black" 
                                                        Background="White" />
                                        </ToolTip>
                                    </TextBlock.ToolTip>
                                </TextBlock>
                            </Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn x:Name="Tara" Header="Тара, т" 
                                    HeaderStyle="{StaticResource CenterGridHeaderStyle}">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Tara}"  HorizontalAlignment="Center"
                                       VerticalAlignment="Center" ToolTipService.ShowDuration="15000" 
                                       >
                                <TextBlock.ToolTip >
                                    <ToolTip>
                                        <TextBlock Text="{Binding Tara}" FontSize="30" Foreground="Black" 
                                                    Background="White" />
                                    </ToolTip>
                                </TextBlock.ToolTip>
                            </TextBlock>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                
                <DataGridTemplateColumn x:Name="TaraNSI" Header="Тара НСИ,т" 
                                    HeaderStyle="{StaticResource CenterGridHeaderStyle}">
                <!--   
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding TaraNSI}"  HorizontalAlignment="Center"
                                       VerticalAlignment="Center" ToolTipService.ShowDuration="15000" 
                                       >
                                <TextBlock.ToolTip >
                                    <ToolTip>
                                        <TextBlock Text="{Binding TaraNSI}" FontSize="30" Foreground="Black" 
                                                    Background="White" />
                                    </ToolTip>
                                </TextBlock.ToolTip>
                            </TextBlock>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                 -->    
                </DataGridTemplateColumn>
                
                <DataGridTemplateColumn x:Name="TaraDelta" Header="▲ Тара,т" 
                                        HeaderStyle="{StaticResource CenterGridHeaderStyle}" >
                <!--   
                    <DataGridTemplateColumn.CellTemplate  >
                        
                        <DataTemplate>
                            <TextBlock Text="{Binding TaraDelta}"  HorizontalAlignment="Center"
                                       VerticalAlignment="Center" ToolTipService.ShowDuration="15000" 
                                       >
                                <TextBlock.ToolTip >
                                    <ToolTip>
                                        <TextBlock Text="{Binding TaraDelta}" FontSize="30" Foreground="Black" 
                                                    Background="White"/>
                                    </ToolTip>
                                </TextBlock.ToolTip>
                            </TextBlock>
                        </DataTemplate>
                        
                    </DataGridTemplateColumn.CellTemplate> 
                -->      
                </DataGridTemplateColumn>

                <DataGridTemplateColumn x:Name="Capacity" Header="Грузоподъемность"
                                        HeaderStyle="{StaticResource CenterGridHeaderStyle}">
                    <DataGridTemplateColumn.CellTemplate  >

                        <DataTemplate>
                            <TextBlock Text="{Binding Carrying}"  HorizontalAlignment="Center"
                                       VerticalAlignment="Center" ToolTipService.ShowDuration="15000" 
                                       >
                                <TextBlock.ToolTip >
                                    <ToolTip>
                                        <TextBlock Text="{Binding Carrying}" FontSize="30" Foreground="Black" 
                                                    Background="White"/>
                                    </ToolTip>
                                </TextBlock.ToolTip>
                            </TextBlock>
                        </DataTemplate>

                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn x:Name="Zona" Header="Зона"
                                        HeaderStyle="{StaticResource CenterGridHeaderStyle}">
                    <DataGridTemplateColumn.CellTemplate  >

                        <DataTemplate>
                            <TextBlock Text="{Binding Zone_e}"  HorizontalAlignment="Center"
                                       VerticalAlignment="Center" ToolTipService.ShowDuration="15000" 
                                       >
                                <TextBlock.ToolTip >
                                    <ToolTip>
                                        <TextBlock Text="{Binding Zone_e}" FontSize="30" Foreground="Black" 
                                                    Background="White"/>
                                    </ToolTip>
                                </TextBlock.ToolTip>
                            </TextBlock>
                        </DataTemplate>

                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                
                <!-- FotoButton -->
                <DataGridTemplateColumn x:Name="FotoButton" Header="Фото" 
                                        HeaderStyle="{StaticResource CenterGridHeaderStyle}">
                    <DataGridTemplateColumn.CellTemplate >
                        <DataTemplate>
                            <Border>
                                <Button Style="{StaticResource Foto}" 
                                        fa5:Awesome.Content="Solid_Image" Width="50" 
                                    Height="30" Click="Foto_Click" />
                            </Border>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                
                
                <!-- isOK -->
                <DataGridTemplateColumn x:Name="isOk" Header="Итог аттестации" 
                                        HeaderStyle="{StaticResource CenterGridHeaderStyle}" >
                    <DataGridTemplateColumn.CellTemplate >
                        <DataTemplate >
                            <Button x:Name="Change_isOk" Height="30" BorderThickness="0"
                                    Style="{StaticResource SomeButton}"
                                    FontSize="12" Background="Transparent" Click="Change_isOk"
                                    BorderBrush="White" >
                                <Button.Content>
                                    <fa:ImageAwesome x:Name="Icon"  Icon="{Binding Att}"   Margin="5"/>
                                </Button.Content>
                                <!--
                                <TextBlock x:Name="TextBlock_Change_isOk" Text="{Binding Att_code}"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center" ToolTipService.ShowDuration="15000"  >
                                    <TextBlock.ToolTip >
                                        <ToolTip>
                                            <TextBlock Text="{Binding Att_code}" FontSize="30" Foreground="Black" 
                                                        Background="White" />
                                        </ToolTip>
                                    </TextBlock.ToolTip>
                                </TextBlock>
                                -->
                            </Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                
                
                <DataGridTemplateColumn x:Name="cause_button" Header="Причина неаттестации" 
                                        HeaderStyle="{StaticResource CenterGridHeaderStyle}" Width="300">
                    <DataGridTemplateColumn.CellTemplate >
                        <DataTemplate >
                            <Button x:Name="CauseButton" Height="30" BorderThickness="0"
                                    Style="{StaticResource SomeButton}"
                                    Background="Transparent" Click="CauseButton_Click"
                                    BorderBrush="White"  >
                                <TextBlock Text="{Binding Cause_name}"  HorizontalAlignment="Center"
                                           VerticalAlignment="Center" ToolTipService.ShowDuration="15000"  >
                                    <TextBlock.ToolTip >
                                        <ToolTip>
                                            <TextBlock Text="{Binding Cause_name}" FontSize="30" Foreground="Black" 
                                                        Background="White" />
                                        </ToolTip>
                                    </TextBlock.ToolTip>
                                </TextBlock>
                            </Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
